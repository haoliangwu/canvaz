{
  "compilerOptions": {
    "target": "es5",                          
    "module": "es2015",                     
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
    ],                             
    "strict": true,                           
    "baseUrl": "./src",                       
    "paths": {
      "@lines/*": ["lines/*"],
      "@shapes/*": ["shapes/*"],
      "@panels/*": ["panels/*"],
      "@utils/*": ["utils/*"]
    },                           
    "esModuleInterop": true,                   
    "experimentalDecorators": true,        
  },
  "exclude": ["node_modules", "dist"]
}